{
  "_comment": "Build with `NAME=ubuntu-17.04-desktop-amd64 UBUNTU_TYPE=desktop packer build ubuntu-desktop.json`",
  "variables": {
    "name": "{{ env `NAME` }}",
    "ubuntu_type": "{{ env `UBUNTU_TYPE` }}",
    "iso_checksum": "43ac1c9803294eff75c0d970da6a7d8b3c01bcd61e71e1a0c6eafb8c0e38cc2e",
    "ssh_username": "vagrant",
    "ssh_password": "vagrant",
    "preseed_file_name": "preseed.cfg",
    "disk_size": "51200"
  },

  "builders":
  [
    {
      "name": "{{ user `name` }}",
      "type": "qemu",
      "iso_checksum_type": "sha256",
      "iso_checksum": "{{ user `iso_checksum` }}",
      "iso_urls": [ "http://archive.ubuntu.com/ubuntu/dists/zesty/main/installer-amd64/current/images/netboot/mini.iso" ],
      "ssh_username": "{{ user `ssh_username` }}",
      "ssh_password": "{{ user `ssh_password` }}",
      "ssh_wait_timeout": "2h",
      "shutdown_command": "echo 'vagrant' | sudo -S shutdown -P now",

      "accelerator": "kvm",
      "qemuargs": [[ "-display", "gtk" ], [ "-m", "2G" ], [ "-smp", 2 ]],
      "boot_wait": "2s",
      "boot_command":
      [
        "<esc>",
        "linux initrd=initrd.gz ",
        "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ubuntu-{{ user `ubuntu_type` }}/{{ user `preseed_file_name` }} ",
        "auto=true ",
        "net.ifnames=0 ",
        "hostname=localhost ",
        "<enter>"
      ],
      "disk_size": "{{ user `disk_size` }}",
      "http_directory": "http"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash -x '{{.Path}}'",
      "scripts": [
        "scripts/ubuntu/update.sh",
        "scripts/ubuntu/spice-vdagent.sh",
        "scripts/linux-common/vagrant.sh",
        "scripts/linux-common/cleanup.sh"
      ]
    }
  ],
  "post-processors": [
    [
      {
        "type": "vagrant",
        "compression_level": 9,
        "vagrantfile_template": "Vagrantfile-linux.template",
        "output": "{{ user `name` }}-{{.Provider}}.box"
      }
    ]
  ]
}
